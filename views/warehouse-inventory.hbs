{{#each message}}
  <div class="alert alert-{{type}} alert-dismissible fade show" role="alert">
    <strong>{{heading}}</strong>
    {{msg}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{{/each}}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/warehouse">Warehouse</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{this.name}} Inventory</li>
  </ol>
</nav>

<div class="row" style="justify-content: flex-end">
  <div class="col-md-8"><h1>{{this.name}} Inventory</h1></div>
  <form class="col-md-4 d-flex" role="search" method="POST" action="/warehouse/{{this.id}}/inventory/{{this.name}}" novalidate>
    <input
      class="form-control me-2"
      type="search"
      placeholder="Search"
      aria-label="Search"
      name="search"
      value="{{search}}"
    />
    <button class="btn btn-outline-success" type="submit">Search</button>
  </form>
</div>
<div class="col-md-12 table-responsive">
  <table class="table table-striped table-hover align-middle">
    <thead>
      <tr>
        <th scope="col">SKU</th>
        <th scope="col">Product Name</th>
        <th scope="col">Quantity</th>
      </tr>
    </thead>
    <tbody>
      {{#each rows}}
        <tr>
          <td>{{this.sku}}</td>
          <td>{{this.product}}</td>
          <td>{{this.quantity}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<nav aria-label="Table pagination">
  <ul class="pagination justify-content-end">
    {{#each pagin}}
      {{#if active}}
        <li class="page-item active"><a
            class="page-link"
            href="/warehouse/{{../id}}/inventory?page={{this.value}}&search={{../search}}"
          >{{this.name}}</a></li>
      {{else}}
        {{#if disabled}}
          <li class="page-item disabled"><a
              class="page-link"
              href="/warehouse/{{../id}}/inventory?page={{this.value}}&search={{../search}}"
            >{{this.name}}</a></li>
        {{else}}
          <li class="page-item"><a
              class="page-link"
              href="/warehouse/{{../id}}/inventory?page={{this.value}}&search={{../search}}"
            >{{this.name}}</a></li>
        {{/if}}
      {{/if}}
    {{/each}}
  </ul>
</nav>