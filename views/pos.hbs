                      <div class="price-wrap h5">
                        <span class="price-new">$1280</span>
                      </div>
                      <div class="action-wrap text-center">
                        <a href="#" class="btn btn-primary btn-sm mt-auto"> <i class="fa fa-cart-plus"></i> Add </a>
                      </div>
                    </figcaption>
                  </figure>
                </div>

              </div>
            </span>
          </div>

          <div class="col-md-4 card pt-2">
            <div class="card table-responsive">
              <span id="cart">
                <table class="table table-hover align-middle shopping-cart-wrap">
                  <thead class="text-muted">
                    <tr>
                      <th scope="col">Item</th>
                      <th scope="col">Qty</th>
                      <th scope="col">Price</th>
                      <th scope="col" class="text-right">Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>
                        <h6 class="title text-truncate">Product name </h6>
                      </td>
                      <td class="text-center">
                        <div class="m-btn-group m-btn-group--pill btn-group mr-2" role="group" aria-label="...">
                          <button type="button" class="m-btn btn btn-sm btn-default"><i class="bi bi-dash"></i></button>
                          <button type="button" class="m-btn btn btn-sm btn-default" disabled>3</button>
                          <button type="button" class="m-btn btn btn-sm btn-default"><i class="bi bi-plus"></i></button>
                        </div>
                      </td>
                      <td>
                        <div class="price-wrap">
                          <var class="price">$145</var>
                        </div>
                        <!-- price-wrap .// -->
                      </td>
                      <td class="text-right">
                        <a href="" class="btn btn-sm btn-outline-danger"> <i class="bi bi-trash3"></i></a>
                      </td>
                    </tr>

                  </tbody>
                </table>
              </span>
            </div>
            <!-- card.// -->
            <div class="box">
              <dl class="dlist-align">
                <dt>Tax: </dt>
