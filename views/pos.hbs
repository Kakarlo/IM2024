            <span id="items">
              <div class="row">

                <div class="col-md-3">
                  <div class="card card-product">
                    <span class="badge-new my-2"> NEW </span>
                    <div class="info-wrap d-flex flex-column justify-content-between">
                      <div class="price-wrap h5">
                        <span class="price-new">$1280</span>
                      </div>
                      <div class="action-wrap text-center">
                        <a href="#" class="btn btn-primary btn-sm mt-auto"> <i class="fa fa-cart-plus"></i> Add </a>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <figure class="card card-product">
                    <span class="badge-new my-2"> NEW </span>
                    <figcaption class="info-wrap d-flex flex-column justify-content-between">
                      <div class="price-wrap h5">
                        <span class="price-new">$1280</span>
                      </div>
                      <div class="action-wrap text-center">
                        <a href="#" class="btn btn-primary btn-sm mt-auto"> <i class="fa fa-cart-plus"></i> Add </a>
                      </div>
                    </figcaption>
                  </figure>
                </div>
                <div class="col-md-3">
                  <figure class="card card-product">
                    <span class="badge-new my-2"> NEW </span>
                    <figcaption class="info-wrap d-flex flex-column justify-content-between">
                      <div class="price-wrap h5">
                        <span class="price-new">$1280</span>
                      </div>
                      <div class="action-wrap text-center">
                        <a href="#" class="btn btn-primary btn-sm mt-auto"> <i class="fa fa-cart-plus"></i> Add </a>
                      </div>
                    </figcaption>
                  </figure>
                </div>
                <div class="col-md-3">
                  <figure class="card card-product">
                    <span class="badge-new my-2"> NEW </span>
                    <figcaption class="info-wrap d-flex flex-column justify-content-between">
                      <div class="price-wrap h5">
