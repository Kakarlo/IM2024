<div class="col-md-7 table-responsive">
  <div class="col-8"><h4>Address</h4></div>
  <div class="d-flex justify-content-end">
    <a href="/supplier/addaddress/{{this.id}}" type="button" class="btn btn-secondary btn-sm align-self-center mx-2">+
      Add Address</a>
  </div>
  <table class="table table-striped table-hover align-middle">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Blk / Lot / Street</th>
        <th scope="col">Barangay</th>
        <th scope="col">City</th>
        <th scope="col">Province</th>
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each address}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td>{{this.address}}</td>
          <td>{{this.barangay}}</td>
          <td>{{this.city}}</td>
          <td>{{this.province}}</td>
          <td class="text-end">
            <a href="/address/editaddress/{{this.id}}" type="button" class="btn btn-light btn-sm"><i
                class="bi bi-pencil"
              >Edit</i></a>
            <a href="#" type="button" class="btn btn-light btn-sm"><i class="bi bi-person-x">Delete</i></a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class="col-md-5 table-responsive">
  <div class="col-8"><h4>Contact</h4></div>
  <div class="d-flex justify-content-end">
    <a href="/supplier/addcontact/{{this.id}}" type="button" class="btn btn-secondary btn-sm align-self-center mx-2">+
      Add Contact</a>
  </div>
  <table class="table table-striped table-hover align-middle">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Contact Number</th>
        <th scope="col">Type</th>
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each contact}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td>{{this.contact_number}}</td>
          <td>{{this.type}}</td>
          <td class="text-end">
            <a href="/address/editaddress/{{this.id}}" type="button" class="btn btn-light btn-sm"><i
                class="bi bi-pencil"
              >Edit</i></a>
            <a href="#" type="button" class="btn btn-light btn-sm"><i class="bi bi-person-x">Delete</i></a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>