<div class="container light-style flex-grow-1 container-p-y">
  <h1 class="font-weight-bold text-center mb-4">Account settings</h1>
  <div class="card overflow-hidden">
    <div class="row no-gutters row-bordered row-border-light">
      <div class="col-md-12">
        <div class="card-body">
          <form role="search" method="POST" action="/settings/updatename">
            <div class="form-group">
              <label class="form-label">User name</label>
              <div class="input-group mb-1">
                <input type="text" class="form-control" value="" placeholder="Enter New Username" required />
                <button class="btn btn-primary">Update</button>
              </div>
            </div>
          </form>

          <form role="search" method="POST" action="/settings/updatepass">
            <div class="form-group">
              <label class="form-label">New Password</label>
              <div class="input-group mb-1">
                <input type="text" class="form-control" value="" placeholder="Enter New Password" required />
                <input type="password" class="form-control" value="" placeholder="Confirm Password" required />
                <button class="btn btn-primary">Update</button>
              </div>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>